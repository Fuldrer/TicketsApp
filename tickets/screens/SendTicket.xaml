<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Enviar ticket" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tickets.SendTicket">
    <ContentPage.Resources>
        <StyleSheet Source="../styles/style.css"></StyleSheet>
    </ContentPage.Resources>
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout Margin="10,20,10,10" VerticalOptions="FillAndExpand">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Cantidad de afectados" Grid.Row="0" Grid.Column="0" class="label"></Label>
                    <Entry Placeholder="#" Keyboard="Numeric" x:Name="number" Grid.Row="0" Grid.Column="1" ></Entry>
                </Grid>
                <Label Text="Clasificación" class="label"></Label>
                <Picker x:Name="picker" SelectedIndex="1">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Solicitud</x:String>
                            <x:String>Información</x:String>
                            <x:String>Queja</x:String>
                            <x:String>Reclamo</x:String>
                            <x:String>Sugerencia</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Text="Prioridad" class="label"></Label>
                <Picker x:Name="pickerPriority" SelectedIndex="1">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Alto</x:String>
                            <x:String>Medio</x:String>
                            <x:String>Bajo</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Text="Asunto" class="label"></Label>
                <Entry Placeholder="Problema" x:Name="subject"></Entry>
                <Label Text="Mensaje" class="label"></Label>
                <Editor x:Name="message" class="editor" ></Editor>
                <Button Text="Adjuntar Archivo" x:Name="Append" HorizontalOptions="Center" class="button" BorderRadius="20"></Button>
                <Button Text="Enviar Ticket" Clicked="OnSubmit" HorizontalOptions="Center" class="sendbutton" BorderRadius="20"></Button>
                <Label Text="Archivos adjuntados" x:Name="Mylabel" HorizontalOptions="Center" class="label"></Label>
                <ListView x:Name="Adjun" SeparatorVisibility="None"></ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>