<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tickets.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Image 
            x:Name="Photo"
            Source="cap.png" 
            Aspect="AspectFit" 
            Margin="20" 
            HeightRequest="400" 
            WidthRequest="200" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
                />
            <ActivityIndicator x:Name="Loading"
                               Color="Red" 
                               IsRunning="true"
                               IsVisible="false"
                               />
            <Button
            x:Name="SignInSignOutBtn" 
            Margin="70,20"
			Text="INICIAR SESIÓN" 
			TextColor="White"
            FontSize="20"
            BorderRadius="20"
			BackgroundColor="#01265A"
            Clicked="OnSignInSignOut"
           />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>